# نمونه تنظیمات محیطی برای MySQL
# این فایل را کپی کرده و نام آن را به .env تغییر دهید

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# MySQL Database Configuration (Primary)
MYSQL_DATABASE=mobixai_db
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_HOST=localhost
MYSQL_PORT=3306

# API Settings
IPANEL_API_KEY=your-ipanel-api-key
IPANEL_PATTERN_CODE=your-pattern-code
IPANEL_FROM_NUMBER=your-from-number
OPENROUTER_API_KEY=your-openrouter-key

# ZarinPal Settings
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
ZARINPAL_SANDBOX=True

# Production Settings (اختیاری)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000