# نمونه فایل تنظیمات MySQL برای Windows (my.ini)
# این فایل معمولاً در مسیر C:\ProgramData\MySQL\MySQL Server 8.0\ قرار دارد
# یا C:\Program Files\MySQL\MySQL Server 8.0\ بسته به نصب شما

[client]
# تنظیمات کلاینت MySQL
port = 3306
default-character-set = utf8mb4

[mysql]
# تنظیمات mysql command line
default-character-set = utf8mb4

[mysqld]
# تنظیمات اصلی سرور MySQL

# پورت پیش‌فرض
port = 3306

# مسیر دیتابیس (تغییر دهید اگر نیاز دارید)
datadir = C:/ProgramData/MySQL/MySQL Server 8.0/Data

# تنظیمات charset برای پشتیبانی کامل از فارسی
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
character-set-client-handshake = FALSE
init-connect = 'SET NAMES utf8mb4'

# تنظیمات InnoDB برای پشتیبانی از utf8mb4
innodb_file_format = Barracuda
innodb_file_per_table = 1
innodb_large_prefix = 1

# تنظیمات عملکرد
max_connections = 200
query_cache_size = 32M
query_cache_type = 1

# تنظیمات امنیتی
skip-name-resolve

# لاگ‌ها
log-error = C:/ProgramData/MySQL/MySQL Server 8.0/Data/mysql-error.log
slow_query_log = 1
slow_query_log_file = C:/ProgramData/MySQL/MySQL Server 8.0/Data/mysql-slow.log
long_query_time = 2

# تنظیمات SQL Mode (مهم برای سازگاری)
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

[mysqldump]
# تنظیمات mysqldump
quick
quote-names
max_allowed_packet = 16M
default-character-set = utf8mb4

[mysqlhotcopy]
interactive-timeout

# نکات مهم:
# 1. پس از تغییر این فایل، MySQL را restart کنید
# 2. مسیرها را متناسب با سیستم خود تغییر دهید
# 3. برای اعمال تغییرات از Windows Services استفاده کنید